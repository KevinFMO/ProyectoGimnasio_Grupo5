@page "/Servicios"

<AuthorizeView Roles="Administrador">

	<Authorized Context="AuthenticationState">
		<h3>Lista de Servicios del Gimnasio</h3>
		<div class="form-group row">
			<div class="col-sm-10">
				<a href="/Servicios/Nuevo" class="btn btn-primary">Agregar Nuevo Servicio</a> 
			</div>
		</div>

		@if (listaServicio == null)
		{
			<p>No existen servicios en el sistema</p>
		}
		else
		{
			<table class="table table-dark">
				<thead> 
					<tr>
						<th>Código</th>
						<th>Descripción</th>
						<th>Precio</th>
						<th>Editar</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var service in listaServicio)
					{
						<tr>
							<td>@service.Codigo</td>
							<td>@service.Descripcion</td>
							<td>@service.Precio</td>
							<th>
								<a class="btn btn-success" href="@($"/Servicios/Editar/{service.Codigo}")">Editar</a>
							</th>
						</tr>
					}

				</tbody>

			</table>
		}


	</Authorized>


</AuthorizeView>
