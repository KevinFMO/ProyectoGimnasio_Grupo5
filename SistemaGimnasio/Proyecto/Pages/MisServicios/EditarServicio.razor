@page "/Servicios/Editar/{Codigo}"

<AuthorizeView Roles="Administrador">
	<Authorized Context="AuthenticationState">
		<div align="center">
            <h2>Editar Servicio</h2>
        </div>
		
		<br />
		<EditForm Model="@services">
			<DataAnnotationsValidator />
			<div class="form-group row">
				<label for="Codigo" class="col-sm-2 col-form-label">
					Código
				</label>
				<div class="col-sm-10">
					<label for="Codigo" class="form-control" >
						@services.Codigo
					</label>
				</div>

			</div>

			<div class="form-group row">
				<label for="Descripcion" class="col-sm-2 col-form-label">
					Descripción
				</label>
				<div class="col-sm-10">
					<InputText id="Descripcion" class="form-control" @bind-Value="services.Descripcion"/>
					<ValidationMessage For="@(() => services.Descripcion)" />
				</div>
			</div>

			<div class="form-group row">
				<label for="PrecioDia" class="col-sm-2 col-form-label">
					PrecioDía
				</label>
				<div class="col-sm-10">
					<InputNumber id="PrecioDia" class="form-control" @bind-Value="services.PrecioDia"/>
				</div>
			</div>

			<div class="form-group row">
				<label for="PrecioMes" class="col-sm-2 col-form-label">
					PrecioMes
				</label>
				<div class="col-sm-10">
					<InputNumber id="PrecioMes" class="form-control" @bind-Value="services.PrecioMes"/>
				</div>
			</div>

			<div class="form-group row">
				<p>
					<input type="submit" class="btn btn-primary" value="Guardar" @onclick="Guardar" />
					<input type="submit" class="btn btn-danger" value="Cancelar" @onclick="Cancelar" />
					<input type="submit" class="btn btn-warning" value="Eliminar" @onclick="Eliminar" />
				</p>

			</div>

		</EditForm>
		

	</Authorized>


</AuthorizeView>
