@page "/Clientes"

<AuthorizeView Roles="Administrador, Usuario">

	<Authorized Context="AuthenticationState">
		<h3>Lista de Clientes</h3>
		<div class="form-group row">
			<div class="col-sm-10">
				<a href="/Clientes/Nuevo" class="btn btn-primary">Nuevo Cliente</a> 
			</div>
		</div>

		@if (listaClientes == null)
		{
			<p>No existen clientes en el sistema</p>
		}
		else
		{
			<table class="table table-dark">
				<thead> 
					<tr>
						<th>Identidad</th>
						<th>Nombre</th>
						<th>Direccion</th>
						<th>Email</th>
						<th>Editar</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var cliente in listaClientes)
					{
						<tr>
							<td>@cliente.Identidad</td>
							<td>@cliente.Nombre</td>
							<td>@cliente.Direccion</td>
							<td>@cliente.Email</td>
							<th>
								<a class="btn btn-success" href="@($"/Clientes/Editar/{cliente.Identidad}")">Editar</a>
							</th>
						</tr>
					}

				</tbody>

			</table>
		}


	</Authorized>


</AuthorizeView>